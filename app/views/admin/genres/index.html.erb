<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
<p>ジャンル名</p>
<%= f.text_field :name %>
<%= f.submit '新規作成' %>
<% end %>

<div>
    <table>
        <thead>
            <tr>
                <th>ジャンル</th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to edit_admin_genre_path(genre.id) do %><p>編集する</p><% end %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
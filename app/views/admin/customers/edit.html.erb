<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <div class="field">
    <p>姓</p>
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <p>名</p>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <p>セイ</p>
    <%= f.text_field :last_name_kana %>
  </div>


  <div class="field">
    <p>メイ</p>
    <%= f.text_field :first_name_kana %>
  </div>


  <div class="field">
    <p>email</p>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <p>郵便番号（ハイフンなし）</p>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <p>住所</p>
    <%= f.text_field :address %>
  </div>

 <div class="field">
    <p>電話番号（ハイフンなし）</p>
    <%= f.text_field :telephone_number %>
  </div>
  
  <div class="field">
    <p>会員ステータス</p>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "無効" %>
  </div>
  
  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
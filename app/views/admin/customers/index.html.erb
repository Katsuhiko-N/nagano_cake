<h2>会員一覧</h2>


<table class="container">
    <thead>
        <tr class="row">
            <th class="col-2">会員ID</th>
            <th class="col-3">氏名</th>
            <th class="col-4">メールアドレス</th>
            <th class="col-3">ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @customers.each do |customer| %>
        <tr class="row">
            <td class="col-2"><%= customer.id %></td>
            <td class="col-3"><%= link_to "#{customer.last_name}#{customer.first_name}", admin_customer_path(customer.id) %></td>
            <td class="col-4"><%= customer.email %></td>
            <td class="col-3">
                <% if customer.is_active == true %>
                    <p>有効</p>
                <% else %>
                    <p>退会</p>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
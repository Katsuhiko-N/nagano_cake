<h2>商品一覧</h2>

<div>
    <table>
        <thead>
            <tr>
                <th>商品IDI</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>販売ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= item.name %></td>
                <td><%= item.price %></td>
                <td><%= item.genre %></td>
                <td><%= item.is_active %></td>
                <td><%= link_to edit_admin_item_path(item.id) do %><p>編集する</p><% end %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
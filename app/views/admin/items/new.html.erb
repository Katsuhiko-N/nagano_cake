<h2>商品新規登録</h2>

<div>
    <%= form_with model: @item, url: admin_items_path do |f| %>
        <%= f.label :image, "商品画像" %>
        <%= f.file_field :image, accept: "image/*" %><br>
        
        
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, placeholder: "商品名" %><br>
        
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, placeholder: "ここで説明文を記述します" %><br>
        
        <%= f.label :genre, "ジャンル" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "ジャンルを選択" %><br>
        
        <%= f.label :price, "税込み価格" %>
        <%= f.number_field :price %><span>円</span><br>
        
        
        <%= f.label :is_active, "販売ステータス" %>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "無効" %><br><br>
        
        <%= f.submit '新規登録' %>
    
    <% end %>
</div>
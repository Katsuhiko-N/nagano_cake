<h2>配送先登録/一覧</h2>

<table class="container">
    <tbody>
        <%= form_with model: @address do |f| %>
        <tr class="row">
            <td class="col-4"><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
            <td class="col-8"><%= f.text_field :postal_code %></td>
        </tr>
        <tr class="row">
            <td class="col-4"><%= f.label :address, "住所" %></td>
            <td class="col-8"><%= f.text_field :address %></td>
        </tr>
        <tr class="row">
            <td class="col-4"><%= f.label :name, "宛名" %></td>
            <td class="col-5"><%= f.text_field :name %></td>
            <td class="col-3"><%= f.submit "新規登録" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<table class="container">
    <thead>
        <tr class="row">
            <th class="col-3">郵便番号</th>
            <th class="col-4">住所</th>
            <th class="col-2">宛名</th>
            <th class="col-3"></th>
        </tr>
    </thead>
    <tbody>
        <% @addresses.each do |address| %>
        <tr class="row">
            <td class="col-3"><p><%= address.postal_code %></p></td>
            <td class="col-4"><p><%= address.address %></p></td>
            <td class="col-2"><p><%= address.name %></p></td>
            <td class="col-3 d-flex">
                <%= link_to edit_address_path(address.id), class: "mx-2" do %>
                    <p>編集する</p>
                <% end %>
                <%= link_to address_path(address.id), method: :delete, class: "mx-2" do %>
                    <p>削除する</p>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

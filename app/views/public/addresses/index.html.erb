<h2>配送先登録/一覧</h2>

<%= form_with model: @address do |f| %>
<table class="container">
    <tbody>
        <tr class="row">
            <td class="col-4"><p><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></p></td>
            <td class="col-8"><p><%= f.text_field :postal_code %></p></td>
        </tr>
        <tr class="row">
            <td class="col-4"><p><%= f.label :address, "住所" %></p></td>
            <td class="col-8"><p><%= f.text_field :address %></p></td>
        </tr>
        <tr class="row">
            <td class="col-4"><p><%= f.label :name, "宛名" %></p></td>
            <td class="col-5"><p><%= f.text_field :name %></p></td>
            <td class="col-3"><p><%= f.submit "新規登録" %></p></td>
        </tr>
    </tbody>
</table>
<% end %>

<table class="container">
    <thead>
        <tr class="row">
            <th class="col-3">郵便番号</th>
            <th class="col-4">住所</th>
            <th class="col-2">宛名</th>
            <th class="col-3"></th>
        </tr>
    </thead>
    <tbody>
        <% @addresses.each do |address| %>
        <tr class="row">
            <td class="col-3"><p><%= address.postal_code %></p></td>
            <td class="col-4"><p><%= address.address %></p></td>
            <td class="col-2"><p><%= address.name %></p></td>
            <td class="col-3 d-flex">
                <%= link_to edit_address_path(address.id), class: "mx-2" do %>
                    <p>編集する</p>
                <% end %>
                <%= link_to address_path(address.id), method: :delete, class: "mx-2" do %>
                    <p>削除する</p>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<div>
    <table>
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
            <% items.in_groups_of(4) do |row| %>
            <tr>
                <% row.each do |item| %>
                <td>
                    <% unless item == nil %>
                    <div><%= image_tag item.image, size: "200x200" %></div>
                    <p><%= link_to "#{item.name}", item_path(item.id) %></p>
                    <p><%= number_to_currency(item.price, unit: "ï¿¥", strip_insignificant_zeros: true) %></p>
                    <% end %>
                </td>
                <% end %>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>


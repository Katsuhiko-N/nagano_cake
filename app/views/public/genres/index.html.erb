<h2>ジャンル一覧・追加</h2>

<div>
    <%= form_with model: @genre do |f| %>
    
    <p>ジャンル名</p>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit '新規登録' %>
    
    <% end %>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th><p>ジャンル</p></th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
            <tr>
                <td>
                    <p><%= genre.name %></p>
                    <%= link_to edit_genre_path(genre.id) do %><p>編集する</p><% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    
</div>